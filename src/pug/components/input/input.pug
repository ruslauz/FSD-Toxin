mixin input(options)
  if !options
    - options = {}
  case options.type
    when 'email'
    when 'text'
    when 'date'
    when 'password'
    when 'dropdown'
      label.label 
        span.label__main-text #{options.labelText}
        if options.additionalText 
          span.label__additional-text #{options.additionalText}
        input(type=`${options.type === 'dropdown' ? 'text' : options.type}` class=`${options.type}-input ${options.hover ? `${options.type}-input_hovered`: ''} ${options.maskedInput ? 'js-masked-input' : ''}` placeholder=options.placeholder  || false value=options.value || false readonly= options.type === 'dropdown')
        if options.type === 'dropdown'
          i.material-icons.dropdown-icon expand_more 
      block
    when 'date-dropdown'
      .date-dropdown
        label.label 
          span.label__main-text #{options.labelText}
          input(type=`text` class=`date-dropdown-input` placeholder=options.placeholder  || false value=options.value || false readonly)
          i.material-icons.dropdown-icon expand_more 
        label.label 
          span.label__main-text #{options.labelText}
          input(type=`text` class=`date-dropdown-input` placeholder=options.placeholder2  || false value=options.value2 || false readonly)
          i.material-icons.dropdown-icon expand_more
      block
    when 'radio'
      - options.class =  options.class || 'radio_simple'
        label(class='label')
          input(type=`${options.type}` class=`${options.type} ${options.class || ''}` value=options.value || false  name=`${options.name}` checked=options.isChecked)
          | #{options.labelText}
          block
    when 'checkbox'
    when 'rich-checkbox'
    when 'toggle'
      label.label.label_with-checkbox
        input(type=`checkbox` class=`checkbox ${options.type !== 'checkbox' ? `checkbox_${options.type}` : ''}` checked=options.isChecked)
        = options.labelText
        if options.type === 'rich-checkbox'
          span.rich-checkbox-text
            span.rich-checkbox-text__title #{options.title}
            span.rich-checkbox-text__description #{options.description}
        block
    