mixin ibox (options)
  - 
    options = options || {}
    let {items} = options

  .increment-box.js-increment-box(class!=attributes.class )
    .increment-box__rows
      - for (let {text, name, value} of items)
        .increment-box__row
          span.increment-box__text= text
          .increment-box__buttons
            button.decrease(type = 'button') -
            input.increment-box__number(name = name value = value type = 'text')
            button.increase(type = 'button') +
    .action-buttons
      button.reset(type = 'button') очистить
      button.done(type = 'button') применить
