include ../../components/input/input
include ../../components/button/button
include ../../components/footer-nav/footer-nav

mixin footer(options)
  -
    options = options  || {}
    const {isMobile} = options
  if !isMobile
    footer.footer
      .footer__top
        .container.footer__container
          .footer__logo
            a.footer__logo-link(href='/' title='Toxin - Главная страниу=ца')
              img.logo(src=require('../../../images/svg/logo.svg') alt="Toxin Logo")
            .footer__text.
              Бронирование номеров в лучшем отеле 2019 года по версии ассоциации «Отельные взгляды»
          .footer__nav
            .footer__nav-item
              +footer-nav({title: 'навигация', items: ['О нас', 'Новости', 'Служба поддержки', 'Услуги']})
            .footer__nav-item
              +footer-nav({title: 'о нас', items: ['О сервисе', 'Наша команда', 'Вакансии', 'Инвесторы']})
            .footer__nav-item
              +footer-nav({title: 'Служба поддержки', items: ['Соглашения', 'Сообщества', 'Связь с нами']})
          .footer__subscription
            .subscription
              .subscription__title.heading_level-3 Подписка
              .subscription__text.
                Получайте специальные предложения и новости сервиса
              .subscription__input
                +input({type: 'text', placeholder: 'Email'})
                  +button({type: 'arrow-forward'})
      .footer__bottom
        .container.footer__container.footer__container_bottom
          .footer__copy.
            Copyright © 2018 Toxin отель. Все права зачищены.
          .footer__social
            a(href="#twitter").footer__social-link
              span.footer__social-item(class="fab fa-twitter")
            a(href="#twitter").footer__social-link
              span.footer__social-item(class="fab fa-facebook-square")
            a(href="#twitter").footer__social-link
              span.footer__social-item(class="fab fa-instagram")
  else 
    footer.footer.footer_mobile
      .footer__top
        .container.footer__container
          .footer__logo
            a.footer__logo-link(href='/' title='Toxin - Главная страниу=ца')
              img.logo(src=require('../../../images/svg/logo.svg'))
      .footer__bottom
        .container.footer__container.footer__container_bottom
          .footer__copy.
            Copyright © 2018 Toxin отель. Все права зачищены.
          .footer__social
            span.footer__social-item(class="fab fa-twitter")
            span.footer__social-item(class="fab fa-facebook-square")
            span.footer__social-item(class="fab fa-instagram")

