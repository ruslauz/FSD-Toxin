extends ../../layouts/main

include ../../components/form-elem/form-elem

block variables
  - const title = 'UI Kit Cards'
  - const description = 'UI Kit Cards'

block main
  main.main
    img.main-logo(src="./images/svg/ui-kit-logo.svg", alt="logo")
    block content
      .content
        .inputs-and-buttons
          +form-elem({
            title: 'Text Field',
            text: 'Default',
            type: 'email',
            class: 'text-input',
            placeholder: 'Email',
          })
          +form-elem({
            title: 'Text Field',
            text: 'Hover / Focus',
            type: 'email',
            class: 'text-input text-input_hovered',
            placeholder: 'This is pretty awesome',
          })
          +form-elem({
            type: 'dropdown-single', 
            title: 'Dropdown', 
            buttonText: 'Cколько гостей'
            })
          +form-elem({
            title: 'masked text field', 
            text: 'Default', 
            type: 'email', 
            class: 'date-input js-date-input', 
            placeholder: 'ДД.ММ.ГГГГ',
          })
          +form-elem({
            type: 'dropdown-group', 
            title1: 'date Dropdown', 
            title2: 'date Dropdown', 
            buttonText1: 'ДД.ММ.ГГГГ',
            buttonText2: '19.08.2019',
          })
          +form-elem({
            type: 'dropdown-single', 
            title: 'filter date dropdown', 
            buttonText: '19 авг - 23 авг'
            })
          +form-elem({
            type: 'subscription'
          })
          +form-elem({
            type: 'checkbox-buttons',
            data: [
              {labelText: 'Можно курить', isChecked: false},
              {labelText: 'Можно с питомцами', isChecked: true},
              {labelText: 'Можно пригласить гостей (до 10 человек)', isChecked: true}]
          })
          +form-elem({
            type: 'radio-buttons',
            name: 'sex',
            data: [
              {labelText: 'Мужчина', isChecked: true},
              {labelText: 'Женщина', isChecked: false}
              ]
          })
          +form-elem({
            type: 'toggle',
            data: [
              {labelText: 'Получать спецпредложения', isChecked: true},
              {labelText: 'Получать спецпредложения', isChecked: false}
              ]
          })
          +form-elem({
            type: 'like'
          })