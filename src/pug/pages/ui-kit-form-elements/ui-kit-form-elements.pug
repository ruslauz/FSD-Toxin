extends ../../layouts/main

include ../../components/form-elem/form-elem
include ../../components/input/input
include ../../components/button/button
include ../../components/rate/rate
include ../../components/pagination/pagination
include ../../components/fieldset/fieldset
include ../../components/list/list
include ../../components/range/range
include ../../components/dropdown/dropdown
include ../../components/expandable-list/expandable-list
include ../../components/bullet-list/bullet-list
include ../../components/advantage/advantage
include ../../components/review/review

block variables
  - const title = 'UI Kit Cards'
  - const description = 'UI Kit Cards'
  - const radios = [{labelText: 'Мужчина', isChecked: true},{labelText: 'Женщина', isChecked: false}]
  - const checkboxes = [{labelText: 'Можно курить', isChecked: false},{labelText: 'Можно с питомцами', isChecked: true},{labelText: 'Можно пригласить гостей (до 10 человек)', isChecked: true}]
  - const expandableList = [{labelText: 'Завтрак',isChecked: false},{labelText: 'Письменный стол',isChecked: true},{labelText: 'Стул для кормления',isChecked: true},{labelText: 'Кроватка',isChecked: true},{labelText: 'Телевизор',isChecked: false},{labelText: 'Шампунь',isChecked: false}]

block main
  main.main.main_form-elements
    .main-logo.main-logo_ui-kit(src="./images/svg/ui-kit-logo.svg", alt="logo")
      include ../../../images/svg/ui-kit-logo.svg
    block content
      .content.content_form-elements
        .inputs-and-buttons
          .column-1
            .inputs-and-buttons__item
              +input({labelText: 'Text Field',additionalText: 'Default',type: 'email',placeholder: 'Email'})
            
            .inputs-and-buttons__item
              +input({labelText: 'Text Field',additionalText: 'Hover / Focus',type: 'email',value: 'This is pretty awesome', hover: true})
              .dropdown-box

            .inputs-and-buttons__item
              +input({labelText: 'Dropdown',additionalText: 'Default',type: 'dropdown',placeholder: 'Сколько гостей', readonly: true})

            .inputs-and-buttons__item
              +input({labelText: 'masked text field',additionalText: 'Default',type: 'text',placeholder: 'ДД.ММ.ГГГГ', maskedInput: true})
            
            .inputs-and-buttons__item
              +input({labelText: 'date Dropdown', type: 'date-dropdown',placeholder: 'ДД.ММ.ГГГГ', value2: '19.08.2019', readonly: true})
              .dropdown-box

            .inputs-and-buttons__item
              +input({labelText: 'filter date dropdown',type: 'dropdown',value: '19 авг - 23 авг', readonly: true})
              .dropdown-box

            .inputs-and-buttons__item
              +input({labelText: 'subscription text field', type: 'text', placeholder: 'Email'})
              +button({type: 'arrow-forward'})

          .column-2
            .inputs-and-buttons__item
              +fieldset({legend: 'checkbox-buttons'})
                .checkbox-buttons
                  each checkbox in checkboxes
                    - let {labelText, isChecked} = checkbox
                      .checkbox-buttons__item
                        +input({type: 'checkbox',labelText: `${labelText}`,isChecked: isChecked})

            .inputs-and-buttons__item
              +fieldset({legend: 'radio-buttons'})
                .radio-buttons
                  each radio in radios
                    - let {labelText, isChecked} = radio
                    .radio-buttons__item
                      +input({type: 'radio',labelText: `${labelText}`, isChecked: isChecked,name: 'sex'}) 

            .inputs-and-buttons__item
              +fieldset({legend: 'toggle'})
                .toggle
                  .toggle__item
                    +input({type: 'toggle', labelText: 'Получать спецпредложения', isChecked: true,})
                  .toggle__item
                    +input({type: 'toggle', labelText: 'Получать спецпредложения', isChecked: false,})

            .inputs-and-buttons__item
              +fieldset({legend: 'like button'})
                .like-buttons
                  +button({type: 'like',likesNumber: 2})
                  +button({type: 'like',likesNumber: 12, liked: true})
            
            .inputs-and-buttons__item
              +fieldset({legend: 'rate button'})
                .rates
                  +rate({rateNumber: 4, name: 'rate1'})
                  +rate({rateNumber: 5, name: 'rate2'})

          .column-3
            .inputs-and-buttons__item.inputs-and-buttons__item_range-container
              +range({title: 'Range Slider'})

            .inputs-and-buttons__item
              +fieldset({legend: 'buttons'})
                .buttons
                  +button({type: 'gradient', buttonText: 'CLICK ME'})
                  +button({type: 'gradient', buttonText: 'CLICK ME', hovered: true})
                .buttons
                  +button({type: 'white', buttonText: 'CLICK ME'})
                  +button({type: 'white', buttonText: 'CLICK ME', hovered: true})
                .buttons
                  +button({type: 'text', buttonText: 'CLICK ME'})
                  +button({type: 'text', buttonText: 'CLICK ME', hovered: true})

            .inputs-and-buttons__item
              +button({type: 'form-submit', buttonText: 'перейти к оплате'})

            .inputs-and-buttons__item_pagination-container
              .inputs-and-buttons__item-heading.heading_level-3 pagination 
              .inputs-and-buttons__item-body
                +pagination({totalCount: 150, take: 10})
        
        .dropdowns
          .column-1
            .dropdowns__item.dropdowns__item_small
              +dropdown({title: 'Dropdown', subtitle: 'Default', items: [{text: 'спальни', name: 'bedroom', value: '2'},{text: 'кровати', name: 'bed', value: '2'},{text: 'ванные комнаты', name: 'bathroom', value: '0'}]})(class='js-convenience-increment-box')

            .dropdowns__item_small
              +dropdown({title: 'Dropdown', subtitle: 'Expanded', items: [{text: 'спальни', name: 'bedroom', value: '2'},{text: 'кровати', name: 'bed', value: '2'},{text: 'ванные комнаты', name: 'bathroom', value: '0'}], expanded: true, static: true})(class='js-convenience-increment-box')
            
          .column-2
            .dropdowns__item
              +dropdown({title: 'Dropdown', items: [{text: 'взрослые', name: 'adults', value: '0'},{text: 'дети', name: 'kids', value: '0'},{text: 'младенцы', name: 'babies', value: '0'}], expanded: true})(class='js-guest-increment-box')
            
          .column-3
            .dropdowns__item
              +dropdown({title: 'Dropdown', items: [{text: 'взрослые', name: 'adults', value: '2'},{text: 'дети', name: 'kids', value: '1'},{text: 'младенцы', name: 'babies', value: '0'}], expanded: true})(class='js-guest-increment-box')
        
        .lists
          .column-1
            .lists__item.lists__item_small
              +expandable-list({title: 'expandable checkbox list'})
                each item in expandableList
                  - let {labelText, isChecked} = item
                    .expandable-list__item
                      +input({type: 'checkbox',labelText: `${labelText}`,isChecked: isChecked})
            
            .lists__item.lists__item_small
              +expandable-list({title: 'expandable checkbox list', open: true})
                each item in expandableList
                  - let {labelText, isChecked} = item
                    .expandable-list__item
                      +input({type: 'checkbox',labelText: `${labelText}`,isChecked: isChecked})



          .column-2
            .lists__item
              .rich-buttons
                +fieldset({legend: 'rich Checkbox Buttons'})
                  .rich-buttons__body
                    .rich-buttons__item
                      +input({type: 'rich-checkbox', title: 'Широкий коридор', description: 'Ширина коридоров в номере<br>не менее 91 см.'})
                    .rich-buttons__item
                      +input({type: 'rich-checkbox', title: 'Помощник для инвалидов', description: 'На 1 этаже вас встретит специалист<br>и проводит до номера.'})

          .colum-3
            .lists__item
              +bullet-list({title: 'bullet list', items: ['Нельзя с питомцами', 'Без вечеринок и мероприятий', 'Время прибытия — после 13:00,<br>а выезд до 12:00']})

        .misc
          .misc__item
            .advantages
              .advantages__item
                +advantage({icon: 'location_city', title: 'Комфорт', description: 'Шумопоглощающие стены'})
              .advantages__item
                +advantage({icon: 'whatshot', title: 'Удобство', description: 'Окно в каждой из спален'})
          
          .misc__item
            .reviews
              +review({imgPath: '/images/avatar.jpg',
              name: 'Мурад Сарафанов',
              date: '5 дней назад',
              likes: 12,
              liked: true,
              content: 'Великолепный матрас на кровати в основной спальне! А пуфик вообще потрясающий. И стены, действительно, шумоподавляющие. Выкрикивал комплименты повару — никто не жаловался из соседей.'
              })







          
