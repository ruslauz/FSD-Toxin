extends ../../layouts/main

include ../../components/list/list

block variables
  - const title = 'UI Kit Colors'
  - const description = 'UI Kit Colors'
  - 
    const colors = [
    {pattern: "ds-100", term: "Dark Shade 100%", descr: "#1F2041"},
    {pattern: "ds-75", term: "Dark Shade 75%", descr: "#1F2041"},
    {pattern: "ds-50", term: "Dark Shade 50%", descr: "#1F2041"},
    {pattern: "ds-25", term: "Dark Shade 25%", descr: "#1F2041"},
    {pattern: "ds-5", term: "Dark Shade 5%", descr: "#1F2041"},
    {pattern: "purple", term: "Purple", descr: "#BC9CFF"},
    {pattern: "green", term: "Green", descr: "#6FCF97"},
    ]
  - 
    const types = [
    {term: 'h1', descr: 'This one is the sub-section or widget title'},
    {term: 'h2', descr: 'Next one is the item title inside widgets'},
    {term: 'h3', descr: 'This is a label or CTA text'},
    {term: 'body', descr: 'This is the body text which is used for most of the design, like paragraphs, lists, etc.'},
    ]

block main
  main.main
    img.main-logo.main-logo_ui-kit(src="./images/svg/ui-kit-logo.svg", alt="logo")
    block content
      .content.colors-and-types
        +list({type: 'ul', class: 'colors'})
          for color in colors
            +list-item({type: 'li', class: 'colors__item'})
              div(class = 'colors__pattern colors__pattern_' + color.pattern)
              .colors__text-block
                +list({type: 'dl', class: 'colors__descr-list'})
                  +list-item({type: 'dt', class: 'colors__term'})
                    |#{color.term}
                  +list-item({type: 'dd', class: 'colors__descr'})
                    |#{color.descr}
        +list({type: 'dl', class: 'types'})
          for type in types
                +list-item({type: 'dt', class: `types__term types__term_${type.term}`})
                  |#{type.term}
                +list-item({type: 'dd', class: `types__descr types__descr_${type.term}`})
                  |#{type.descr}